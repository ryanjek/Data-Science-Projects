---
interface Props {
  position: string;
  company: string;
  period: string;
  responsibilities: string[];
}

const { position, company, period, responsibilities } = Astro.props;
---

<div class="bg-white border border-slate-200 rounded-lg p-6 shadow-sm">
  <div class="flex flex-col md:flex-row justify-between md:items-center mb-2">
    <h3 class="text-lg font-semibold">{position}</h3>
    <span class="text-slate-600 text-sm">{period}</span>
  </div>
  <p class="text-blue-600 font-medium mb-4">{company}</p>
  <ul class="space-y-2 text-slate-700">
    {responsibilities.map(item => (
      <li class="flex items-start">
        <span class="mr-2 text-blue-600">â€¢</span>
        <span>{item}</span>
      </li>
    ))}
  </ul>
</div>
